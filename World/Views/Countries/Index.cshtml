@using World.Models;

<h1>Countries List</h1>
<h2>Search for Country: </h2>
<form action="/countries/info" method="post">
      <label for="name">Search for a country:</label>
      <input id="name" name="name" type="text">
      <button type="submit">Submit</button>
</form>

<ol>
@if (Model.Count == 0)
{
  <p>You have no countries in your list!</p>
}
@if(Model.Count != 0)
{
  @foreach (Country country in Model)
  {
    <li><a href="/countries/infomation"> @country.GetName()</a></li>
  }
}
</ol>
